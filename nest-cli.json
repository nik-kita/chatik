{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/chatik/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/chatik/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/chatik",
  "projects": {
    "chatik": {
      "type": "application",
      "root": "apps/chatik",
      "entryFile": "main",
      "sourceRoot": "apps/chatik/src",
      "compilerOptions": {
        "tsConfigPath": "apps/chatik/tsconfig.app.json"
      }
    },
    "chatik-ws": {
      "type": "application",
      "root": "apps/chatik-ws",
      "entryFile": "main",
      "sourceRoot": "apps/chatik-ws/src",
      "compilerOptions": {
        "tsConfigPath": "apps/chatik-ws/tsconfig.app.json"
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    }
  }
}